{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* Path alias */
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "styled-system/*": [
        "styled-system/*"
      ],
    },
    /* Type checking */
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@mirohq"
    ]
  },
  "include": [
    "vite.config.ts",
    "node_modules/@types",
    "node_modules/@mirohq",
  ]
}
